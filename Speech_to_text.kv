WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
<MyLabel@Label>
    size_hint:[None, None]
    size: self.texture_size
<MyTextField@TextInput>
    size_hint:[0.3, 0.4]
<LangButton@Button>
    background_normal: ''
    color: [0,0,0,1]
    size:(.5,.7)
    size_hint:[None, None]
    pos_hint:{"center_x":0.5}
    height: 50
    width: 120
<Label>
    background_color: (1,0.5,0.6,1)
    font_size: 30
<Button>
    background_color: (1,0,0,1)

<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20
        Label:
            id: mnm
            text: "Speech To Text Synthesis"
            size_hint: .55, .42
            pos_hint: {"x": 0.22}

        Button:

            text: "Speech To Text "
            #size_hint: .35, .32
            background_color: 1,0,0,1
            pos_hint: {"center_x": 0.5}

            on_press:
                app.root.current = "Second Window"
                root.manager.transition.direction = "left"


        Button:

            text: "Text To Text "
            #size_hint: .35, .32
            background_color: 1,0,0,1
            pos_hint: {"center_x": 0.5}

            on_press:
                app.root.current = "Third"
                root.manager.transition.direction = "left"





<SecondWindow>:
    name: "Second Window"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source : "micback.gif"
            anime_delay: -1
            #mipmap: True
            #allow_stretch: True
            #keep_ratio : False
            #keep_data : True

        Button:
            text: "Record"
            background_color: 1,0,0,1
            pos_hint: {"center_x": 0.5}
            size: 450,150
            size_hint: None, None
            #on_press = root.StopRec()
            on_press:
                root.start()
                app.root.current = "Third"
                #root.StopRec()
                #root.ThirdWindow.proper()


<ThirdWindow>:
    name: "Third"

    #root.proper()

    FloatLayout:
        canvas.before:
            Color:
                rgba:[0,0,1,0]
            Rectangle:
                pos: self.pos
                size: self.size
        #Button:
        #   text: "press"
        #  on_press: root.proper()
        MyLabel:
            text:"Language Translator "
            pos_hint: {"center_x":0.5,"top":0.95}
            font_size: '60sp'
            font_name: "Comic"
            color: [1,1,1,1]
        MyLabel:
            text: "From"
            pos_hint: {"center_x":0.2, "top":0.8}
            font_size: '30sp'
            font_name: "Comic"
            color: [1,1,1,1]
        MyLabel:
            text: "To"
            pos_hint: {"center_x":0.8, "top":0.8}
            font_size: '30sp'
            font_name: "Comic"
            color: [1,1,1,1]
        MyTextField:
            id: field1
            size: root.width,root.height
            pos_hint: {"center_x":0.2, "top":0.7}
        #on_load : root.proper()
        MyTextField:
            id: field2
            font_name: "SANSKBI.ttf"
            size: root.width,root.height
            pos_hint: {"center_x":0.8, "top":0.7}
        BoxLayout:
            size: root.width,root.height
            pos_hint: {"center_x":0.94, 'y':0.1}
            orientation: 'horizontal'
            LangButton:
                text: 'Translate'
                background_color:[1,0,0,0.6]
                on_press: root.translate()

        BoxLayout:
            orientation:'vertical'
            size: root.width,root.height
            padding: 50
            spacing: 20
            Button:
                size_hint: [None,None]
                size: 150,100
                background_color: 0,0,0,0
                pos_hint:{'x':.15,'y':.7}
                on_press : root.eng_speak()
                Image:
                    source:'sp.gif'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y

        BoxLayout:

            orientation:'vertical'
            size: root.width,root.height
            padding: 50
            spacing: 20
            Button:
                text: "Word"
                size_hint: [None,None]
                size: 100,100
                background_color: 1,0,0,1
                pos_hint:{'x':.001,'y':.7}
                on_press : root.proper()


        BoxLayout:
            orientation:'vertical'
            size: root.width,root.height
            padding: 50
            spacing: 20
            Button:
                size_hint: [None,None]
                size: 150,100
                background_color: 0,0,0,0
                pos_hint:{'x':.8,'y':.7}
                on_release: root.san_speak()
                Image:
                    source:'sp.gif'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y

